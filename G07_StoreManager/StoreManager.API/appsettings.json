{
	"Logging": {
		"LogLevel": {
			"Default": "Information",
			"Microsoft.AspNetCore": "Warning"
		}
	},
	"ConnectionStrings": {
		"StoreManager": "server = LAPTOP-KJO35V1P; database = G07_StoreManager; integrated security = true; TrustServerCertificate = true"
	},
	"AllowedHosts": "*",
	"Serilog": {
		"Using": [ "Serilog.Sinks.File" ],
		"MinimumLevel": {
			"Default": "Information"
		},
		"WriteTo": [
			{
				"Name": "File",
				"Args": {
					"path": "../logs/webapi-.log",
					"rollingInterval": "Day",
					"outputTemplate": "[{Timestamp:yyy-MM-dd HH:mm:ss.fff zzz} {CorrelationId} {Level:u3}] {Username} {Message:lj}{NewLine}{Exception}"
				}
			}
		]
	}
}
