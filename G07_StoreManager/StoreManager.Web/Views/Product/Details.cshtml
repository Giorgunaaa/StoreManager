@using StoreManager.Web.Models;
@model ProductModel

@{
    ViewData["Title"] = "Product Details";
}

@{
    string formattedPrice = Model.Price % 1 == 0
        ? String.Format("{0:C0}", Model.Price)
        : String.Format("{0:C}", Model.Price);
}

<h2>@Model.Name</h2>
<h3 style="color: green">Price: @formattedPrice</h3>
<p>Id:@Model.Id<p>
<p>Description: @Model.Description</p>

<button class="btn btn-primary" id="editButton">Edit</button>

<div id="editFormContainer" style="display: none;">
            @using (Html.BeginForm("Edit", "Product", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(model => model.Id)

        <div>
            <h3>Edit Product</h3>
            <div>
                        @Html.LabelFor(model => model.Name)
                        @Html.EditorFor(model => model.Name)
            </div>

            <div>
                        @Html.LabelFor(model => model.Price)
                        @Html.EditorFor(model => model.Price)
            </div>

            <div>
                        @Html.LabelFor(model => model.Description)
                        @Html.EditorFor(model => model.Description)
            </div>

            <div>
                <input type="submit" value="Save" />
            </div>
        </div>
            }
</div>

        @section Scripts {
    <script>
        $(document).ready(function () {
            $("#editButton").click(function () {
                $("#editFormContainer").toggle();
            });
        });
    </script>
}
